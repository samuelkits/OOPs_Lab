class InvalidIntegerException(Exception):
    def __init__(self, message="integer is not in range"):
        self.message = message
        super().__init__(self.message)

def get_integer_input():
    try:
        value = int(input("Enter an integer between 1 and 100: "))
        if value < 1 or value > 100:
            raise InvalidIntegerException()
        return value
    except InvalidIntegerException as e:
        print(f"Error: {e}")
        raise
    except ValueError:
        print("Error: Invalid input. Please enter an integer.")
        raise
    finally:
        print("Execution of get_integer_input is complete.")

def main():
    try:
        numbers = list(range(1, 101))
        print("Array initialized with values from 1 to 100.")
        user_value = get_integer_input()
        print(f"User entered: {user_value}")
    except InvalidIntegerException:
        print("Caught an InvalidIntegerException.")
    except Exception as e:
        print(f"An unexpected error occurred: {e}")

if __name__ == "__main__":
    main()
