from abc import ABC, abstractmethod
import math

# Define the interfaces
class MathsOperable(ABC):
    @abstractmethod
    def add(self, a, b):
        pass

    @abstractmethod
    def sub(self, a, b):
        pass

    @abstractmethod
    def mul(self, a, b):
        pass

    @abstractmethod
    def div(self, a, b):
        pass

    @abstractmethod
    def mod(self, a, b):
        pass

class TrigonometricOperable(ABC):
    @abstractmethod
    def sine(self, angle):
        pass

    @abstractmethod
    def cosine(self, angle):
        pass

    @abstractmethod
    def tan(self, angle):
        pass

# Define the abstract class Calculator
class Calculator(ABC):
    def __init__(self, no1, no2):
        self.no1 = no1
        self.no2 = no2
        self.result = 0

# Implement the interfaces and inherit the Calculator class in Operation class
class Operation(Calculator, MathsOperable, TrigonometricOperable):
    def add(self, a, b):
        return a + b

    def sub(self, a, b):
        return a - b

    def mul(self, a, b):
        return a * b

    def div(self, a, b):
        return a / b if b != 0 else 'Division by zero error'

    def mod(self, a, b):
        return a % b

    def sine(self, angle):
        return math.sin(math.radians(angle))

    def cosine(self, angle):
        return math.cos(math.radians(angle))

    def tan(self, angle):
        return math.tan(math.radians(angle))

# Main class to demonstrate the operations
class Main:
    def menu(self):
        operation = Operation(0, 0)
        while True:
            print("\nMenu:")
            print("1. Add")
            print("2. Subtract")
            print("3. Multiply")
            print("4. Divide")
            print("5. Modulus")
            print("6. Sine")
            print("7. Cosine")
            print("8. Tangent")
            print("9. Exit")
            choice = int(input("Enter your choice: "))

            if choice in [1, 2, 3, 4, 5]:
                no1 = float(input("Enter first number: "))
                no2 = float(input("Enter second number: "))
                if choice == 1:
                    print("Result:", operation.add(no1, no2))
                elif choice == 2:
                    print("Result:", operation.sub(no1, no2))
                elif choice == 3:
                    print("Result:", operation.mul(no1, no2))
                elif choice == 4:
                    print("Result:", operation.div(no1, no2))
                elif choice == 5:
                    print("Result:", operation.mod(no1, no2))
            elif choice in [6, 7, 8]:
                angle = float(input("Enter angle in degrees: "))
                if choice == 6:
                    print("Result:", operation.sine(angle))
                elif choice == 7:
                    print("Result:", operation.cosine(angle))
                elif choice == 8:
                    print("Result:", operation.tan(angle))
            elif choice == 9:
                break
            else:
                print("Invalid choice. Please try again.")

if __name__ == "__main__":
    main = Main()
    main.menu()
